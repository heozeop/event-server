{
  "extends": "../../packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "../../packages/enums/src/auth/role.enum.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
