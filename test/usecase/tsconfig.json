{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "@libs/enums": ["packages/enums/src"],
      "@libs/enums/*": ["packages/enums/src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
