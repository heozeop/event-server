{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    ]
  },
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@libs/enums(.*)$": "<rootDir>/../../packages/enums/src$1"
  }
}
